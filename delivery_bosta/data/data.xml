<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="product.product" id="product_bosta_delivery">
            <field name="name">Bosta Delivery</field>
            <field name="barcode">BOSTA123</field>
            <field name="type">service</field>
        </record>

        <record model="delivery.carrier" id="bosta_delivery">
            <field name="name">Bosta Delivery</field>
            <field name="delivery_type">bosta</field>
            <field name="product_id" ref="product_bosta_delivery"/>
            <field name="bosta_api_url">https://api.bosta.co/api/v0</field>
            <field name="bosta_tracking_endpoint">https://bosta.co/tracking-shipments?shipment-number=</field>
        </record>

        <record model="bosta.status" id="status_delivered">
            <field name="name">Delivered</field>
        </record>
        <record model="bosta.status" id="status_returned">
            <field name="name">Returned to Shipper</field>
        </record>
        <record model="bosta.status" id="status_cancelled">
            <field name="name">Order Cancelled</field>
        </record>


    </data>
</odoo>
